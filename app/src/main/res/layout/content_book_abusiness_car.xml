<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_book_abusiness_car"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.perfect_apps.tawsili.activities.BookABusinessCarActivity"
    tools:showIn="@layout/app_bar_book_abusiness_car">

    <FrameLayout
        android:id="@+id/orign_marker"
        android:layout_width="55dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginBottom="50dp"
        android:visibility="invisible">

        <ImageView
            android:layout_width="55dp"
            android:layout_height="65dp"
            android:src="@drawable/empty" />

        <TextView
            android:id="@+id/time"
            android:layout_width="35dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="2dp"
            android:gravity="center"
            android:text="12\nMin"
            android:textColor="#000"
            android:textSize="9sp"
            android:textStyle="bold" />
    </FrameLayout>

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#80ffffff"
        android:paddingBottom="3dp"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/current_location_button"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="4dp"
            android:paddingRight="4dp">

            <ImageView
                android:layout_width="35dp"
                android:layout_height="wrap_content"
                android:contentDescription="@null"
                android:padding="8dp"
                android:src="@drawable/location" />

            <TextView
                android:id="@+id/current_location_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_vertical_margin"
                android:layout_marginRight="@dimen/activity_vertical_margin"
                android:textAlignment="viewStart"
                android:layout_weight="1"
                android:maxLines="2"
                android:ellipsize="end"
                android:text=""
                android:textStyle="bold"
                tools:ignore="RtlCompat" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:contentDescription="@null"
                android:padding="5dp"
                android:src="@drawable/ic_grade_gray" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/dark_gray"/>
        <LinearLayout
            android:id="@+id/drop_off_location_button"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="4dp"
            android:visibility="gone"
            android:paddingRight="4dp">

            <ImageView
                android:layout_width="35dp"
                android:layout_height="wrap_content"
                android:contentDescription="@null"
                android:padding="8dp"
                android:src="@drawable/flag" />

            <TextView
                android:id="@+id/drop_off_location_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_vertical_margin"
                android:layout_marginRight="@dimen/activity_vertical_margin"
                android:textAlignment="viewStart"
                android:layout_weight="1"
                android:maxLines="2"
                android:ellipsize="end"
                android:text=""
                android:textStyle="bold"
                tools:ignore="RtlCompat" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:contentDescription="@null"
                android:padding="5dp"
                android:src="@drawable/ic_grade_gray" />
        </LinearLayout>
        <View
            android:id="@+id/drop_off_line"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/dark_gray"/>
        <LinearLayout
            android:id="@+id/linearLayout4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="4dp"
            android:background="?android:attr/selectableItemBackground"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:paddingBottom="2dp"
                android:paddingTop="2dp"
                android:src="@drawable/payment2"/>
            <View
                android:layout_width="8dp"
                android:layout_height="1dp"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/cash"
                    android:textStyle="bold"/>


            </LinearLayout>


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/dark_gray"/>
        <LinearLayout
            android:id="@+id/linearLayout5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="4dp"
            android:background="?android:attr/selectableItemBackground"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:paddingBottom="2dp"
                android:paddingTop="2dp"
                android:src="@drawable/car2"/>
            <View
                android:layout_width="8dp"
                android:layout_height="1dp"/>
            <LinearLayout
                android:id="@+id/fairEstimateView"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/fairEstimateTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/fair_estimate"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/fairEstimateValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/to_get_fare_estimate" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/penaltyView"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/penalty"
                    android:textColor="@color/red"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/penaltyValueText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="" />

            </LinearLayout>

            <TextView
                android:id="@+id/add_promo_code"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:text="Add Promo Code"
                android:textStyle="bold"/>

        </LinearLayout>

        <Button
            android:id="@+id/button1"
            android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_height="40dp"
            android:text="@string/let_s_go"
            android:textColor="@color/white"
            android:background="@drawable/border_shape_button_dark"/>

    </LinearLayout>

</RelativeLayout>
